<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayFragment"
    android:id="@+id/fl_display">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/greetingText"
            android:layout_width="328dp"
            android:layout_height="90dp"
            android:layout_marginTop="24dp"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/updatePhotoButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/pictureView"
            android:layout_width="249dp"
            android:layout_height="222dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updatePhotoButton"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="Profile Picture" />

        <Button
            android:id="@+id/updatePhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="131dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="8dp"
            android:text="Update Photo"
            app:layout_constraintBottom_toTopOf="@+id/pictureView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greetingText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>